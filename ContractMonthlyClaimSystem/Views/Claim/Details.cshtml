@model ContractMonthlyClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
}

<div class="card shadow p-4">
    <h2 class="mb-4">Claim Details</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <strong>Lecturer:</strong> @Model.LecturerName
        </div>
        <div class="col-md-6">
            <strong>Month:</strong> @Model.Month.ToString("MMMM yyyy")
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <strong>Total Hours:</strong> @Model.TotalHours
        </div>
        <div class="col-md-6">
            <strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <strong>Status:</strong> <span class="badge bg-info">@Model.Status</span>
        </div>
    </div>

    <h4>Claim Items</h4>
    <table class="table table-striped mb-4">
        <thead>
            <tr>
                <th>Date</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ClaimItems)
            {
                <tr>
                    <td>@item.Date.ToString("MM/dd/yyyy")</td>
                    <td>@item.Hours</td>
                    <td>@item.Rate.ToString("C")</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.Documents.Any())
    {
        <h4>Supporting Documents</h4>
        <div class="list-group mb-4">
            @foreach (var doc in Model.Documents)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@doc.OriginalFileName</span>
                    <a href="@Url.Action("DownloadDocument", new { id = doc.Id })"
                       class="btn btn-sm btn-outline-primary"
                       download="@doc.OriginalFileName">
                        Download
                    </a>
                </div>
            }
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">Submit New Claim</a>
    </div>
</div>